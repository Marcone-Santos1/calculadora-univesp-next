generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false)
  accounts      Account[]
  sessions      Session[]
  
  // App specific relations
  questions     Question[]
  comments      Comment[]
  votes         Vote[]
  notifications Notification[]
  
  // Gamification
  reputation    Int             @default(0)
  reputationLogs ReputationLog[]
  
  // Reporting
  reportsFiled  Report[]        @relation("Reporter")

  // Feedback
  Feedbacks       Feedback[]
  
  // Blog
  posts         BlogPost[]

  // Profile
  bio           String?   @db.Text
  location      String?
  website       String?
  socialLinks   Json?

  aacActivities AacActivity[]
  aacReportConfig AacReportConfig?

  scrapeHistory ScrapeHistory[]

  advertiserProfile AdvertiserProfile?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  // Gamification & Tracking
  lastLoginAt   DateTime?
  loginStreak   Int              @default(0)
  achievements  UserAchievement[]
  commentVotes  CommentVote[]
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievementId String   
  unlockedAt    DateTime @default(now())

  @@unique([userId, achievementId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // 'REPLY', 'ANSWER', 'VOTE', 'VERIFICATION'
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  // Optional links
  link      String?  // URL to redirect to
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// App Domain Models

model Subject {
  id        String     @id @default(cuid())
  name      String     @unique
  icon      String?
  color     String?
  questions Question[]
}

model Question {
  id          String   @id @default(cuid())
  title       String
  text        String   @db.Text
  week        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  views       Int      @default(0)
  isVerified            Boolean   @default(false)
  verificationRequested Boolean   @default(false)
  verificationRequestDate DateTime?
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  subjectId   String
  subject     Subject  @relation(fields: [subjectId], references: [id])
  
  alternatives Alternative[]
  comments     Comment[]
  reports      Report[]
}

model Alternative {
  id          String   @id @default(cuid())
  letter      String   // A, B, C, D, E
  text        String
  isCorrect   Boolean  @default(false) // Only if verified
  
  questionId  String
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  votes       Vote[]
}

model Vote {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  
  alternativeId String
  alternative   Alternative @relation(fields: [alternativeId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime    @default(now())

  @@unique([userId, alternativeId]) // User can only vote once per alternative (logic should enforce once per question)
}

model CommentVote {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@unique([userId, commentId])
}

model Comment {
  id         String   @id @default(cuid())
  text       String   @db.Text
  createdAt  DateTime @default(now())
  
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  // For nested replies
  parentId   String?
  parent     Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[] @relation("CommentReplies")
  
  votes      CommentVote[]

  reports    Report[]

  // Moderation
  isDeleted        Boolean  @default(false)
  moderationReason String?
}

model ReputationLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Int
  reason    String   // 'VOTE_RECEIVED', 'ANSWER_ACCEPTED', etc.
  createdAt DateTime @default(now())
}

model Report {
  id        String   @id @default(cuid())
  reason    String
  status    String   @default("PENDING") // PENDING, RESOLVED, DISMISSED
  createdAt DateTime @default(now())
  
  reporterId String
  reporter   User     @relation("Reporter", fields: [reporterId], references: [id])
  
  // Optional targets
  questionId String?
  question   Question? @relation(fields: [questionId], references: [id])
  
  commentId  String?
  comment    Comment?  @relation(fields: [commentId], references: [id])
}

model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  excerpt     String   @db.Text
  content     String   @db.Text
  coverImage  String?
  published   Boolean  @default(false)
  
  // SEO
  metaTitle       String?
  metaDescription String?
  keywords        String? // Comma separated

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
}

enum FeedbackType {
  BUG         // "Encontrei um erro"
  IDEA        // "Tenho uma sugestão"
  OTHER       // "Outro"
}

model Feedback {
  id        String       @id @default(cuid())
  message   String       @db.Text
  type      FeedbackType @default(IDEA)
  pageUrl   String?      // Útil para saber onde o erro ocorreu
  
  userId    String?
  user      User?        @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime     @default(now())
  isRead    Boolean      @default(false)
}

// ARC / Horas Complementares
enum AacCategory {
  COURSE      // Cursos
  CULTURAL    // Cultural (Filmes, Livros, Museus)
  EXPERIENCE  // Vivência Profissional
  INTERNSHIP  // Estágio
  OTHER       // Outros
}

model AacActivity {
  id            String      @id @default(cuid())
  title         String
  description   String?     @db.Text
  category      AacCategory
  institution   String?
  
  startDate     DateTime?
  endDate       DateTime?   // Se null, considera pontual? Ou obrigatório?
  
  originalHours Int         // Horas no certificado
  validHours    Int         // Horas computadas após regras (pode ser recalculado no backend, mas persistido para performance)
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt // Importante para sync

  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AacReportConfig {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  ra              String?
  polo            String?
  ingressDate     String?
  intro           String?  @db.Text
  conclusion      String?  @db.Text
  
  activityDetails Json?    // Record<activityId, { description, relation }>

  updatedAt       DateTime @updatedAt
}

model ScrapeHistory {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  year      String   // Ex: "2024"
  examId    String   // O 'value' do option select (ID único da prova no AVA)
  examName  String   // Para exibição (Ex: "Avaliação Bimestral - Matemática")
  
  completedAt DateTime @default(now())

  @@unique([userId, examId]) // Evita duplicar o mesmo registro
  @@index([userId])
}

// --- ADS PLATFORM ---

enum AdCampaignStatus {
  DRAFT
  PENDING_REVIEW
  ACTIVE
  PAUSED
  REJECTED
  OUT_OF_BUDGET
}

enum AdTransactionType {
  DEPOSIT
  SPEND
  REFUND
}

enum AdTransactionStatus {
  PENDING
  COMPLETED
  FAILED
}

enum AdBillingType {
  CPC
  CPM
}

enum AdEventType {
  VIEW
  CLICK
}

model AdvertiserProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  balance     Int      @default(0) // In cents
  taxId       String?  // CPF/CNPJ
  cellphone   String?  // WhatsApp/Phone
  companyName String?
  
  campaigns   AdCampaign[]
  transactions AdTransaction[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AdCampaign {
  id            String           @id @default(cuid())
  advertiserId  String
  advertiser    AdvertiserProfile @relation(fields: [advertiserId], references: [id], onDelete: Cascade)
  
  title         String
  status        AdCampaignStatus @default(DRAFT)
  
  billingType   AdBillingType    @default(CPC)
  priority      Int              @default(1) // 1=Normal, 10=High
  
  dailyBudget   Int              // In cents
  costValue     Int              // In cents (CPC or CPM cost)
  
  startDate     DateTime?
  endDate       DateTime?

  creatives     AdCreative[]
  dailyMetrics  AdDailyMetrics[]
  eventLogs     AdEventLog[]
  
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  
  rejectionReason String?
}

model AdCreative {
  id             String     @id @default(cuid())
  campaignId     String
  campaign       AdCampaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  headline       String
  description    String     @db.Text
  imageUrl       String
  destinationUrl String
  
  views          Int        @default(0)
  clicks         Int        @default(0)
  
  eventLogs      AdEventLog[]
  dailyMetrics   AdCreativeDailyMetrics[]
  
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

model AdDailyMetrics {
  id          String     @id @default(cuid())
  campaignId  String
  campaign    AdCampaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  date        DateTime   // Only YYYY-MM-DD part matters
  views       Int        @default(0)
  clicks      Int        @default(0)
  spend       Int        @default(0) // In cents
  ctr         Float      @default(0)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([campaignId, date])
  @@index([campaignId])
}

model AdCreativeDailyMetrics {
  id          String     @id @default(cuid())
  creativeId  String
  creative    AdCreative @relation(fields: [creativeId], references: [id], onDelete: Cascade)
  
  date        DateTime   // Only YYYY-MM-DD part matters
  views       Int        @default(0)
  clicks      Int        @default(0)
  spend       Int        @default(0) // In cents (proportional)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([creativeId, date])
  @@index([creativeId])
}

model AdEventLog {
  id          String      @id @default(cuid())
  campaignId  String
  campaign    AdCampaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  
  creativeId  String?
  creative    AdCreative? @relation(fields: [creativeId], references: [id])
  
  type        AdEventType
  userId      String?     // Optional, for logged-in users
  ipAddress   String?     // Anonymized
  userAgent   String?
  geoRegion   String?
  
  cost        Int         @default(0) // Cost of this specific event
  
  createdAt   DateTime    @default(now())

  @@index([campaignId])
  @@index([createdAt])
}

model AdTransaction {
  id           String              @id @default(cuid())
  advertiserId String
  advertiser   AdvertiserProfile   @relation(fields: [advertiserId], references: [id], onDelete: Cascade)
  
  type         AdTransactionType
  amount       Int                 // In cents.
  status       AdTransactionStatus @default(PENDING)
  
  gatewayId    String?             // For AbacatePay ID
  metadata     Json?
  
  createdAt    DateTime            @default(now())
}
